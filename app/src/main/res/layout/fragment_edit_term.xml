<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.iangclifton.android.floatlabel.FloatLabel
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_edittext"
        android:hint="@string/math_term_hint"/>

    <com.iangclifton.android.floatlabel.FloatLabel
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/formula_edittext"
        android:hint="@string/formula_hint"
        android:typeface="serif" />

    <TextView
        android:id="@id/float_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="@string/description_hint"
        android:textIsSelectable="true"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <com.commonsware.cwac.richedit.RichEditText
        android:id="@+id/description_edittext"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:hint="@string/description_hint"
        android:layout_weight="1"/>

    <com.iangclifton.android.floatlabel.FloatLabel
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tags_edittext"
        android:hint="@string/tags_hint"/>
</LinearLayout>
